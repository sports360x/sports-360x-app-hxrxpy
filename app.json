
{
  "expo": {
    "name": "Sports 360 X",
    "slug": "sports360x",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/sports360x-icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/sports360x-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0b0f14"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sports360x.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSUserTrackingUsageDescription": "This app uses analytics to improve your sports insights experience."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/sports360x-icon.png",
        "backgroundColor": "#0b0f14"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.sports360x.app"
    },
    "web": {
      "favicon": "./assets/images/sports360x-favicon.png",
      "bundler": "metro",
      "template": "./web/index.html",
      "build": {
        "babel": {
          "include": ["@expo/vector-icons"]
        }
      }
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser"
    ],
    "scheme": "sports360x",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {}
    }
  }
}
